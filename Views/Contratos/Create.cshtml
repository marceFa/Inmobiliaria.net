@model Inmobiliaria.Models.Contratos

@{ ViewData["Title"] = "Crear"; }

<h2>Nuevo Contrato</h2>
<h4>Inmueble: @ViewBag.Inmuebles.Tipo @ViewBag.Inmuebles.Direccion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdInm" class="control-label"></label>
                <input asp-for="IdInm" value=@ViewBag.Inmuebles.IdInm readonly />
                <span asp-validation-for="IdInm" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Inquilinos</label>
                <select class="form-control" name="IdInq">
                    @foreach (var item in (IList<Inquilinos>)ViewBag.Inquilinos)
                    {
        <option value="@item.IdInq">@(item.Nombre + " " + item.Apellido)</option>}
                </select>
                <span asp-validation-for="IdInq" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input asp-for="FechaInicio" type="date" form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaCierre" class="control-label"></label>
                <input asp-for="FechaCierre" type="date" class="form-control" />
                <span asp-validation-for="FechaCierre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" value=@ViewBag.Inmuebles.Costo readonly />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a Contratos</a>
</div>

