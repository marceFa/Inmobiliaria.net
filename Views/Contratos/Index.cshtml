@model IEnumerable<Inmobiliaria.Models.Contratos>

@{
    ViewData["Title"] = "Lista de Contratos";
}

<h2>Contratos</h2>
<h4> @Html.ActionLink("Buscar Contratos Vigentes", "Busqueda", "Contratos")</h4>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdContr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inquilinos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inmuebles)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCierre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Monto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vigente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdContr)
            </td>
            <td>
                @(item.Inquilinos.Nombre + " " + item.Inquilinos.Apellido)
            </td>
            <td>
                @(item.Inmuebles.Tipo + " " + item.Inmuebles.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCierre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Monto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vigente)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id=item.IdContr}) |
                
                @Html.ActionLink("Eliminar", "Delete", new { id=item.IdContr })
            </td>
        </tr>
}
    </tbody>
</table>
